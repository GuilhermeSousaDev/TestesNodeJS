{{#each erros}}
<div class=" alert alert-danger">{{text}}</div>
{{/each}}
<h3>Editar Postagem:</h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/postagens/editar" method="POST">
            <input type="hidden" name="id" value="{{doc._id}}">
            <label for="Titulo">Titulo:</label>
            <input class="form-control" 
            type="text" 
            name="titulo" 
            placeholder="{{doc.titulo}}"
            value="{{doc.titulo}}">
            <label for="slug">Slug</label>
            <input class="form-control" 
            type="text" 
            name="slug" 
            placeholder="Slug da postagem"
            value="{{doc.slug}}">
            <label for="descricao">Descrição</label>
            <input class="form-control mt-2" 
            type="text" name="descricao" placeholder="Descrição da postagem" value="{{doc.descricao}}">
            <label for="conteudo">Conteudo</label>
            <textarea class="form-control" name="conteudo">{{doc.conteudo}}</textarea>
             <select name="categoria mt-4">
                 {{#each doc}}
                    <option value="{{_id}}">{{nome}}</option>
                    {{else}}
                    <option value="0">Sem resultados</option>
                {{/each}}
             </select>
            <br>
            <br>
            <button type="submit" class="btn btn-success">Editar Categoria</button>
        </form>
    </div>
</div>