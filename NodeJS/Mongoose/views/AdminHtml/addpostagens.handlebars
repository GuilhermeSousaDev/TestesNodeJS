<div class="card">
    <div class="card-body">
        <h4>Nova Postagem</h4>
        <form action="/admin/postagens/new" method="POST">
            <label for="titulo">Titulo</label>
            <input type="text" name="titulo" class="form-control" required>
            <label for="slug">Slug</label>
            <input type="text" name="slug" class="form-control" required>
            <label for="descricao">Descrição</label>
            <input type="text" name="descricao" class="form-control" required>
            <label for="conteudo">Conteudo</label>
            <textarea class="form-control" name="conteudo" required></textarea>
            <label for="categoria">Categoria</label>
            <select class="mt-4" name="categoria">
                {{#each categoria}}
                <option value="{{_id}}">{{nome}}</option>
                {{else}}
                <option value="0">Nenhuma Categoria Registrada</option>
                {{/each}}
            </select>
            <br>
            <button class="btn btn-primary mt-4" type="submit">Criar Postagem</button>
        </form>
    </div>
</div>