<h2>Lista de Postagens: </h2>
{{#each erros}}
    <div class="alert alert-danger">{{text}}</div>
{{/each}}
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success">Nova Postagem</button></a>
{{#each doc}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{titulo}}</h4>
            <p>{{descricao}}</p>
            <small>Data: {{data}}</small>
            <br>
            <small>Categoria: {{categoria.nome}}</small>
            <br>
            <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-primary mt-2">Editar</button></a>
            <a href="/admin/postagens/delete/{{_id}}"><button class="btn btn-danger mt-2">Deletar</button></a>
        </div>
    </div>

{{else}}
    <p>Nenhuma Postagem Registrada</p>
{{/each}}