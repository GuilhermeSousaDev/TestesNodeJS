<h2>Lista de Categoria: </h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success">Nova Categoria</button></a>
{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>Slug: {{slug}}</small><br>
            <small>Data de Criação: {{date}}</small>
            <br>
            <a href="/admin/categorias/delete/{{_id}}"><button class="btn btn-danger mt-2">Deletar</button></a>
            <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-primary mt-2">Editar</button></a>
        </div>
    </div>
    {{else}}
    <h4 class="mt-3">Nenhuma Categoria Registrada</h4>
{{/each}}


